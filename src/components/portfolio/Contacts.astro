---
import Mail from "@lucide/astro/icons/mail";
import Phone from "@lucide/astro/icons/phone";
import Linkedin from "@lucide/astro/icons/linkedin";
import Facebook from "@lucide/astro/icons/facebook";

const portfolioData = await import("../../content/portfolio.json");

const iconMap: Record<string, any> = {
  Mail,
  Phone,
  Linkedin,
  Facebook,
};
---

<section
  id="contact"
  class="flex w-full justify-center px-4 py-20"
  data-aos="fade-up"
>
  <div class="w-full max-w-6xl space-y-12">
    <!-- Header -->
    <div class="space-y-4 text-center">
      <h2 class="text-foreground font-mono text-4xl font-bold">Get in Touch</h2>
      <p class="mx-auto max-w-2xl">
        Feel free to reach out. I'm always open to discussing new projects,
        creative ideas, and opportunities.
      </p>
    </div>

    <!-- Contact Cards Grid -->
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        portfolioData.contacts &&
          portfolioData.contacts.map((contact) => {
            const Icon = iconMap[contact.icon];
            return (
              <a
                href={contact.url}
                target="_blank"
                rel="noopener noreferrer"
                class="group border-border bg-card hover:border-primary/50 hover:bg-card/80 flex flex-col items-center justify-center rounded-lg border p-8 text-center transition-all duration-300 hover:-translate-y-1 hover:shadow-lg"
              >
                <div class="bg-primary/10 text-primary group-hover:bg-primary group-hover:text-primary-foreground mb-6 rounded-full p-4 transition-colors">
                  {Icon ? (
                    <Icon class="h-8 w-8" />
                  ) : (
                    <span class="text-xl">?</span>
                  )}
                </div>

                <h3 class="text-muted-foreground mb-2 font-mono text-sm tracking-wider uppercase">
                  {contact.label}
                </h3>

                <span class="text-foreground group-hover:text-primary font-mono text-base font-medium transition-colors">
                  {contact.value}
                </span>
              </a>
            );
          })
      }
    </div>
  </div>
</section>
