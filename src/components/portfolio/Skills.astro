---
const skills = [
  "JavaScript",
  "TypeScript",
  "React",
  "Astro",
  "Node.js",
  "CSS/Sass",
  "Git",
  "SQL",
  "Docker",
];
---

<section id="skills" class="py-24" data-aos="fade-up">
  <h2 class="mb-6 text-4xl font-bold">Skills</h2>
  <ul class="flex flex-wrap gap-4">
    {
      skills.map((skill) => (
        <li class="bg-secondary text-secondary-foreground hover:bg-primary hover:text-primary-foreground cursor-default rounded-full px-4 py-2 font-medium transition-all hover:-translate-y-1">
          {skill}
        </li>
      ))
    }
  </ul>
</section>
