---
const projects = [
  {
    title: "E-commerce Dashboard",
    description:
      "A comprehensive dashboard for managing online stores, featuring real-time analytics and inventory management.",
    link: "#",
    tags: ["React", "Node.js", "Chart.js"],
  },
  {
    title: "Task Management App",
    description:
      "A collaborative task manager with drag-and-drop functionality and team workspaces.",
    link: "#",
    tags: ["Vue.js", "Firebase", "Tailwind"],
  },
  {
    title: "Weather Forecast CLI",
    description:
      "A command-line tool that provides accurate weather forecasts using a public API.",
    link: "#",
    tags: ["Rust", "API", "CLI"],
  },
];
---

<section id="projects" class="py-16">
  <h2 class="text-4xl font-bold mb-8">Featured Projects</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      projects.map((project) => (
        <div class="group flex flex-col rounded-xl border border-border bg-card p-6 shadow-sm transition-all hover:shadow-md hover:-translate-y-1">
          <h3 class="text-xl font-bold mb-2">{project.title}</h3>
          <p class="text-muted-foreground mb-4 flex-1">
            {project.description}
          </p>
          <div class="flex flex-wrap gap-2 mb-4">
            {project.tags.map((tag) => (
              <span class="text-xs font-medium px-2.5 py-0.5 rounded bg-secondary text-secondary-foreground">
                {tag}
              </span>
            ))}
          </div>
          <a
            href={project.link}
            class="inline-flex items-center text-sm font-medium text-primary hover:underline"
          >
            View Project &rarr;
          </a>
        </div>
      ))
    }
  </div>
</section>
