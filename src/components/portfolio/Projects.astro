---
const projects = [
  {
    title: "E-commerce Dashboard",
    description:
      "A comprehensive dashboard for managing online stores, featuring real-time analytics and inventory management.",
    link: "#",
    tags: ["React", "Node.js", "Chart.js"],
  },
  {
    title: "Task Management App",
    description:
      "A collaborative task manager with drag-and-drop functionality and team workspaces.",
    link: "#",
    tags: ["Vue.js", "Firebase", "Tailwind"],
  },
  {
    title: "Weather Forecast CLI",
    description:
      "A command-line tool that provides accurate weather forecasts using a public API.",
    link: "#",
    tags: ["Rust", "API", "CLI"],
  },
];
---

<section id="projects" class="py-24">
  <h2 class="mb-8 text-4xl font-bold" data-aos="fade-up">Featured Projects</h2>
  <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
    {
      projects.map((project) => (
        <div
          data-aos="fade-up"
          class="group border-border bg-card flex flex-col rounded-xl border p-6 shadow-sm transition-all hover:-translate-y-1 hover:shadow-md"
        >
          <h3 class="mb-2 text-xl font-bold">{project.title}</h3>
          <p class="text-muted-foreground mb-4 flex-1">{project.description}</p>
          <div class="mb-4 flex flex-wrap gap-2">
            {project.tags.map((tag) => (
              <span class="bg-primary text-primary-foreground rounded px-2.5 py-0.5 text-xs font-medium">
                {tag}
              </span>
            ))}
          </div>
          <a
            href={project.link}
            class="text-primary inline-flex items-center text-sm font-medium hover:underline"
          >
            View Project &rarr;
          </a>
        </div>
      ))
    }
  </div>
</section>
