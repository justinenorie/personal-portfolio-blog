---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/ui/Header.astro";
import BlogList from "../../components/blog/BlogList";
import { getReadingTime } from "../../utils/readingTime";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../constants/consts";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const processedPosts = posts.map((post) => ({
  id: post.id,
  slug: post.id,
  data: {
    ...post.data,
    tags: post.data.tags || [],
  },
  readingTime: getReadingTime(post.body || ""),
}));
---

<Layout title={`Blog | ${SITE_TITLE}`} description={SITE_DESCRIPTION}>
  <Header />
  <main class="container mx-auto px-4 py-12">
    <div class="mb-12">
      <h1 class="text-4xl font-bold mb-4">Blogs that I write</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        Thoughts, tutorials, and insights.
      </p>
    </div>

    <BlogList posts={processedPosts} client:load />
  </main>
</Layout>
