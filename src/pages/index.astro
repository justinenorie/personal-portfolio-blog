---
import Layout from "../layouts/Layout.astro";
import Header from "../components/ui/Header.astro";
import Footer from "../components/portfolio/Footer.astro";
import Hero from "../components/portfolio/Hero.astro";
import About from "../components/portfolio/About.astro";
import Projects from "../components/portfolio/Projects.astro";
import Experience from "../components/portfolio/Experience.astro";
import Contacts from "../components/portfolio/Contacts.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../constants/consts";
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <Header />
  <main>
    <Hero />
    <About />
    <Projects />
    <Experience />
    <Contacts />
  </main>
  <Footer />
</Layout>
